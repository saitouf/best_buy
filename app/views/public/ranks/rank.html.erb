<%= link_to 'いいね日', rank_path(favorite_daycount: "true") %>
 |<%= link_to 'いいね週', rank_path(favorite_weekcount: "true") %>
 |<%= link_to 'いいね月', rank_path(favorite_monthcount: "true") %>
 

  <div class="container">
  <div class="row">
    <% @post_favorite_ranks.each.with_index(1) do |post, i| %>
      <div class="col-md-4 mb-4">
        <div class="card">
          <%= link_to post_item_path(post.id) do %>
            <%= image_tag post.get_image, class: "card-img-top" %>
          <% end %>
          <div class="card-body">
            <h5 class="card-title">第<%= i %>位</h5>
            <h6 class="card-subtitle mb-2 text-muted"><%= post.name %></h6>
            <p class="card-text">
              <i class="fas fa-user"></i> <%= post.customer.name %> ｜
              <i class="far fa-comment"></i><%= post.post_comments.count %> ｜
              <i class="fas fa-eye"></i><%= post.view_counts.count %> | 
              <span id="favorite_buttons_<%= post.id %>">
                <%= render 'public/favorites/btn', post_item: post %>
              </span>
            </p>
            <p><%= l post.created_at %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

  
