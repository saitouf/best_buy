<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>グループ編集</h2>
      <%= form_with model: group, local: true do |f| %>
        <%= render 'layouts/errors', obj: group %>
        <div class="form-group">
          <%= f.label :グループ画像, class: "h4" %>
          <%= f.file_field :image, class: "form-control-file", accept: 'image/*' %>
        </div>
        <div class="form-group">
          <%= f.label :グループ名, class: "h4" %>
          <%= f.text_field :name, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :グループ概要, class: "h4" %>
          <%= f.text_area :introduction, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.submit "変更を保存する", class: 'btn btn-success', style: "width: 200px;" %>
        </div>
      <% end %>
    </div>
  </div>
</div>