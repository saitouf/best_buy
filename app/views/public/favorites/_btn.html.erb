<% if post_item.favorited_by?(current_customer) %>
  <%= link_to post_item_favorites_path(post_item), method: :delete, remote: true, class:"text-dark" do %>
  <i class="fas fa-heart" aria-hidden="true" style="color: red;"></i>
    <%= post_item.favorites.count %>
  <% end %>
<% else %>
  <%= link_to post_item_favorites_path(post_item), method: :post, remote: true do %>
  <i class="fas fa-heart" aria-hidden="true"></i>
    <%= post_item.favorites.count %>
  <% end %>
<% end %>