<div class="search-form">
  <%= form_with url: search_path, method: :get, local: true, class: 'input-group' do |f| %>
  <%= f.text_field :keyword, placeholder:"キーワードを入力してください", value: @keyword, class: 'form-control' %>
  <div class="input-group-append">
    <%= f.submit "検索", class: 'btn btn-primary' %>
  </div>
  <% end %>
</div>