<div class="container">
  <div class="row no-gutters justify-content-center">
    <div class="col-md-5 col-sm-10 mx-2 mx-sm-auto text-center shadow-lg rounded px-0 my-5">
      <h5 class="text-dark bg-light py-4 mb-0">ユーザーログイン</h5>
      <div class="form-body p-4">
        <%= form_with model: @customer, url: customer_session_path do |f| %>
          <div class="form-group">
            <%= f.label :メールアドレス %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"sample@example.com", class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :パスワード %><br />
            <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
          </div>
          <div class="actions">
            <%= f.submit "Log in", class:"btn btn-lg btn-block btn-info mt-5" %>
          </div>
        <% end %>
        <%= render "public/shared/links" %>
      </div>
    </div>
  </div>
</div>
