<h1>編集フォーム</h1>
  <%= form_with model: @post_item do |f| %>
    <div class="form-group">
      <h4>商品画像</h4>
      <%= f.file_field :image, accept: "image/*" %>
    </div>
    <div class="form-group">
      <h4>商品名</h4>
      <%= f.text_field :name %>
    </div>
    <div class="form-group">
      <h4>商品カテゴリー</h4>
      <%= f.text_field :category %>
    </div>
    <div class="form-group">
      <h4>価格</h4>
      <%= f.text_field :price %>
    </div>
    <div class="form-group">
      <h4>説明</h4>
      <%= f.text_area :explanation %>
    </div>
    <div class="form-group">
      <h4>使用してみた感想</h4>
      <%= f.text_field :thoughts %>
    </div>
    <div class="form-group">
      <h4>おすすめポイント</h4>
      <%= f.text_field :recommend_point %>
    </div>
    
    <div class="form-group">
    <%= f.submit '投稿', class: 'btn btn-success'%>
    </div>
  <% end %>