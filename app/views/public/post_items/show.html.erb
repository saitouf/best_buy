<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-3 text-center" style="font-size: 32px;">
        <%= @post_item.name %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <%= image_tag @post_item.get_image, size: "500x500", class: "img-fluid" %>
    </div>
  </div>
  <div class="row mt-4">
    <div class="col-md-6 offset-md-3">
      <h4>価格</h4>
      <%= number_with_delimiter(@post_item.price, delimiter: ',') %>円
    </div>
  </div>
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <h4>説明</h4>
      <span class="bordered-element"><%= @post_item.explanation %></span>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <h4>使用してみた感想</h4>
      <span class="bordered-element"><%= @post_item.thoughts %></span>
    </div>
  </div>
    <div class="row">
    <div class="col-md-6 offset-md-3">
      <h4>おすすめポイント</h4>
      <ul class="bullet-list">
        <% @post_item.recommend_point.split("\n").each do |point| %>
          <li class="custom-bullet"><%= point %></li>
        <% end %>
      </ul>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <h4>ジャンル</h4>
      <% @post_item.tags.each do |tag| %>
      <span class="badge badge-primary"><%= tag.name %></span>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6 offset-md-3">
      閲覧数: <%= @post_item.view_counts.count %>
      <span id="favorite_buttons_<%= @post_item.id %>">
        <%= render 'public/favorites/btn', post_item: @post_item %>
      </span>
    </div>
  </div>
  <div class="row mt-4">
    <div class="col-md-6 offset-md-3">
      <% if @post_item.customer == current_customer %>
        <%= link_to '投稿編集', edit_post_item_path(@post_item), class: "btn btn-sm btn-success" %>
        <%= link_to '投稿削除', @post_item, method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger" %>
      <% end %>
    </div>
  </div>
  <div class="row mt-4">
    <div class="col-md-6 offset-md-3">
      <div class="new-comment">
        <%= render 'public/post_comments/index', post_item: @post_item %>
      </div>
    </div>
  </div>
  <div class="row mt-4">
    <div class="col-md-6 offset-md-3">
      <%= render 'public/post_comments/form', post_item: @post_item, post_comment: @post_comment %>
    </div>
  </div>
</div>