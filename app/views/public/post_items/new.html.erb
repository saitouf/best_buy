<div class="container">
  <%= render 'layouts/errors', obj: @post_item %>
    <h2 class="my-5">投稿フォーム</h2>
      <div class="col-md-10">
        <%= form_with model: @post_item do |f| %>
        <div class='form-group'>
          <h4>ジャンル</h4>
          <%= f.collection_select :tag_ids, Tag.all, :id, :name, {}, { class: "form-control", multiple: true } %>
        </div>
        <div class="form-group">
          <h4>投稿画像</h4>
          <%= f.file_field :image, class: "mb-3", accept: "image/*" %>
        </div>
        <div class="form-group">
          <h4>商品名</h4>
          <%= f.text_field :name, placeholder:"BestBuy", class: "form-control col-md-6 mb-4" %>
        </div>
        <div class="form-group">
          <h4>商品価格</h4>
          <%= f.text_field :price, placeholder:"000000", class: "form-control col-md-6 mb-4" %>
        </div>
        <div class="form-group">
          <h4>使用用途</h4>
          <%= f.text_area :explanation, placeholder:"使い道や使い方などを入力してください", class: "form-control col-md-10 mb-4" %>
        </div>
        <div class="form-group">
          <h4>使用してみた感想</h4>
          <%= f.text_area :thoughts, placeholder:"実際に使用してみた感想などを入力してください", class: "form-control col-md-10 mb-4" %>
        </div>
        <div class="form-group">
          <h4>おすすめポイント</h4>
          <%= f.text_area :recommend_point, placeholder: text_placeholder, class: "form-control col-md-10 mb-5" %>
        </div>
        <%= f.submit '投稿する', class: 'btn btn-primary mt-3', style: "width: 300px;" %>
      <% end %>
    </div>
  </div>
</div>