<div class="container">
  <%= render 'layouts/errors', obj: @post_item %>
  <div class="panel panel-default">
    <div class="panel-heading"><h2>投稿フォーム</h2></div>
      <div class="panel-body">
        <%= form_with model: @post_item do |f| %>
        <div class='form-group'>
          <h4>ジャンル</h4>
          <%= f.collection_select :tag_ids, Tag.all, :id, :name, {}, { class: "form-control", multiple: true } %>
        </div>
        <div class="form-group">
          <h4>投稿画像</h4>
          <%= f.file_field :image, accept: "image/*" %>
        </div>
        <div class="form-group">
          <h4>商品名</h4>
          <%= f.text_field :name, class: "form-control col-md-6" %>
        </div>
        <div class="form-group">
          <h4>商品価格</h4>
          <%= f.text_field :price, class: "form-control col-md-6" %>
        </div>
        <div class="form-group">
          <h4>使用用途</h4>
          <%= f.text_area :explanation, class: "form-control col-md-10" %>
        </div>
        <div class="form-group">
          <h4>使用してみた感想</h4>
          <%= f.text_area :thoughts, class: "form-control col-md-10" %>
        </div>
        <div class="form-group">
          <h4>おすすめポイント</h4>
          <%= f.text_area :recommend_point, class: "form-control col-md-10" %>
        </div>
        <%= f.submit '投稿する', class: 'btn btn-primary mt-3', style: "width: 300px;" %>
      <% end %>
    </div>
  </div>
</div>