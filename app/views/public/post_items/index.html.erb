<p>
    <%= link_to '新しい順', post_items_path(latest: "true") %>
      |<%= link_to '古い順', post_items_path(old: "true") %>
      |<%= link_to 'コメントの高い順', post_items_path(comment_count: "true") %>
  </p>
  
  <div class="search-form">
    <%= form_with url: search_path, method: :get, local: true do |f| %>
      <%= f.text_field :keyword, value: @keyword %>
      <%= f.submit "検索" %>
    <% end %>
  </div>
  
  <%= form_tag({controller: "post_items", action: "index"}, method: :get) do %>
    <%= select_tag "tag_id", options_from_collection_for_select(Tag.all, "id", "name"), prompt: "ジャンルを選択してください" %>
    <%= submit_tag '検索' %>
  <% end %>

<div class="card mx-auto mt-4 shadow-lg" style="width: 700px">
  <% @post_items.each do |post_item| %>
  <%= link_to post_item_path(post_item.id) do %>
    <%= image_tag post_item.get_image, class:"card-img-top"; %>
  <% end %>
  <div class="card-body">
    <div class="row">
      <div class="col-10">
        <p class="card-title">
          <%= link_to(post_item_path(post_item), class:"text-dark") do %>
            <strong><span class="h4"><%= post_item.name %></span></strong>
          <% end %>
        </p>
        <p class="card-text">使用用途：<%= post_item.explanation %></p>
        <span><i class="fas fa-user"></i> <%= post_item.customer.name %> ｜ </span>
        <span><i class="far fa-comment"></i><%= post_item.post_comments.count %> ｜ </span>
        <span><i class="fas fa-eye"></i><%= post_item.view_counts.count %></span>
        <p>投稿日時：<%= l post_item.created_at %></p>
      </div>
    </div>
  </div>
  <% end %>
</div>
