<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-3 my-3">
      <div class="btn-group">
        <%= link_to '新しい順', post_items_path(latest: "true"), class: 'btn btn-secondary' %>
        <%= link_to '古い順', post_items_path(old: "true"), class: 'btn btn-secondary' %>
        <%= link_to 'コメントの多い順', post_items_path(comment_count: "true"), class: 'btn btn-secondary' %>
        <%= link_to 'いいね数の多い順', post_items_path(favorite_count: "true"), class: 'btn btn-secondary' %>
      </div>
    </div>
  </div>
  <div class="row mt-3">
    <div class="col-md-6">
      <%= render 'public/searches/form', keyword: @keyword  %>
    </div>
    <div class="col-md-4">
      <%= render 'tag_form' %>
    </div>
  </div>
</div>
  <% @post_items.each do |post_item| %>
  <div class="card mx-auto shadow-lg my-4" style="width: 700px">
  <%= link_to post_item_path(post_item.id) do %>
    <%= image_tag post_item.get_image, class:"card-img-top"; %>
  <% end %>
    <div class="card-body">
      <div class="row">
        <div class="col-10">
          <p>
            <%= link_to(post_item_path(post_item), class:"text-dark") do %>
              <h4>
                <% if post_item.name.length > 78 %>
                  <%=  post_item.name[0..77] + '...' %>
                <% else %>
                  <%= post_item.name %>
                <% end %>
              </h4>
            <% end %>
          </p>
          <p class="card-text">
            <%= link_to(post_item_path(post_item), class:"text-dark") do %>
            使用用途：<%= post_item.explanation %>
            <% end %>
          </p>
          <span><i class="fas fa-user"></i> <%= post_item.customer.name %> ｜ </span>
          <span><i class="far fa-comment"></i><%= post_item.post_comments.count %> ｜ </span>
          <span><i class="fas fa-eye"></i><%= post_item.view_counts.count %></span> |
          <span id="favorite_buttons_<%= post_item.id %>">
            <%= render 'public/favorites/btn', post_item: post_item %>
          </span>
          <p>投稿日時：<%= l post_item.created_at %></p>
        </div>
      </div>
    </div>
  </div>
<% end %>
<div class="d-flex justify-content-center">
  <%= paginate @post_items %>
</div>



