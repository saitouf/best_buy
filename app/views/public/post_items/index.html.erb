<table class='table table-hover table-inverse'>
  <p>
    <%= link_to '新しい順', post_items_path(latest: "true") %>
      |<%= link_to '古い順', post_items_path(old: "true") %>
      |<%= link_to 'コメントの高い順', post_items_path(comment_count: "true") %>
  </p>
  
  <div class="search-form">
    <%= form_with url: search_path, method: :get, local: true do |f| %>
      <%= f.text_field :keyword, value: @keyword %>
      <%= f.submit "検索" %>
    <% end %>
  </div>
  
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @post_items.each do |post_item| %>
      <tr>
        <td>
          <!--%= image_tag book.user.get_profile_image, size:'50x50' %-->
        </td>
        <td>
          <%= link_to post_item_path(post_item) do %>
          <%= post_item.name %>
          <% end %>
          </td>
          <td>いいね数: <%= post_item.favorites.count %></td>
          <td>コメント数: <%= post_item.post_comments.count %></td>
          <td>
          <p class="view-count">閲覧数: <%= post_item.view_counts.count %></p>
          </td>
          <td><p>投稿日時：<%= l post_item.created_at %></p></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= form_tag({controller:"post_items",action:"index"}, method: :get) do %>
    <% Tag.all.each do |t| %>
        <li><%= check_box :tag_ids, t.name %><%= t.name %></li>
    <% end %>
    <%= submit_tag '検索' %>
<% end %>
