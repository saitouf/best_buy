<div class="container">
  <div class="row">
    <div class="col-5 bg-light">
      <h4><%= @customer.name %>さんの会員情報編集</h4>
    </div>
  </div>

  <%= form_with model:@customer, url:admin_customer_path, method: :patch do |f| %>
    <div class="row">
      <div class="col-1 mt-4"><%= f.label :"会員ID" %></div>
      <div class="col-4 offset-1 mt-4"><%= f.label :"#{@customer.id}", :size => "30" %></div>
    </div>
    <div class="row">
      <div class="col-2 mt-2"><%= f.label :"氏名" %></div>
      <div class="col-3"><%= f.text_field :name, :size => "30", autofocus: true %></div>
    </div>
    <div class="row">
      <div class="col-2 mt-2"><%= f.label :"メールアドレス" %></div>
      <div class="col-1"><%= f.email_field :email, :size => "30" %></div>
    </div>
    <div class="row">
      <div class="col-2 mt-2"><%= f.label :"会員ステータス" %></div>
      <div class="col-1"><%= f.radio_button :is_deleted, "false" %>
      <%= f.label :is_deleted, "有効" %></div>
      <div class="col-2"><%= f.radio_button :is_deleted, "true" %>
      <%= f.label :is_deleted, "退会" %></div>
    </div>
    <div class="row">
      <div class="col-2 offset-2 mt-4">
        <%= f.submit "変更を保存", class: "btn btn-success btn-lg" %>
      </div>
    </div>
  <% end %>
</div>