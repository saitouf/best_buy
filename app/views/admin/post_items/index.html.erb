<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @post_items.each do |post_item| %>
      <tr>
        <td>
          <!--%= image_tag book.user.get_profile_image, size:'50x50' %-->
        </td>
        <td>
          <%= link_to admin_post_item_path(post_item) do %>
          <%= post_item.name %>
          <% end %>
          </td>
          <td>いいね数: <%= post_item.favorites.count %></td>
          <td>コメント数: <%= post_item.post_comments.count %></td>
          <td>
          <p class="view-count">閲覧数: <%= post_item.view_counts.count %></p>
          </td>
          <td><p>投稿日時：<%= l post_item.created_at %></p></td>
      </tr>
    <% end %>
  </tbody>
</table>